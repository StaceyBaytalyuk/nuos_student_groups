    <form method="post" action="deleteStudent">
        <button type="submit">Удалить студента</button>
        <input type="text" name="studentName" placeholder="Студент"/>
    </form>
</div>-->

<div>
    <form method="post" action="deleteStudentById">
        <button type="submit">Удалить студента по id</button>
        <input type="number" name="id" placeholder="id"/>
    </form>
</div>

<b>Список групп</b>
{{#universityGroups}}
    <div>
        <b>{{id}}</b>
        <span>{{name}}</span>
    </div>
{{/universityGroups}}

<b>Список студентов</b>
{{#students}}
<div>
    <b>{{id}}</b>
    <span>{{name}}</span>
</div>
{{/students}}

<b>Список студентов и групп</b>
{{#students}}
<div>
    <b>{{id}}</b>
    <span>{{name}}</span>
    <span>{{group.name}}</span>
</div>
{{/students}}

</body>
</html>